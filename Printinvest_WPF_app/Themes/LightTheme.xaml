<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="NavBackgroundColor">#FFF0F0F0</Color>
    <Color x:Key="ContentBackgroundColor">#FFFFFFFF</Color>
    <SolidColorBrush x:Key="NavBackgroundBrush" Color="{StaticResource NavBackgroundColor}"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{StaticResource ContentBackgroundColor}"/>
    <SolidColorBrush x:Key="NavTextBrush" Color="#222" />
    <SolidColorBrush x:Key="TextBrush" Color="Black"/>
    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#FF007ACC" />
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="White" />
    <SolidColorBrush x:Key="TextBoxBorderColor" Color="#FFCCCCCC" />

    <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
    <!-- Добавлен BorderBrush -->
</ResourceDictionary>